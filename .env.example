# Database Configuration
POSTGRES_DB=minerdb
POSTGRES_USER=mineruser
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_URL=postgresql://mineruser:your-secure-db-password@localhost:5432/minerdb

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@localhost:6379/0

# Security Keys (Generate new ones for production!)
SECRET_KEY=your-super-secret-application-key
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key-32-bytes

# API Keys
XAI_API_KEY=your-xai-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Performance Settings
MAX_WORKERS=4
REDIS_POOL_SIZE=20
HTTP_TIMEOUT=30
MODEL_RETRAIN_INTERVAL=3600
MIN_SAMPLES_FOR_TRAINING=100

# Monitoring
GRAFANA_PASSWORD=your-grafana-admin-password

# Development Settings (Set to false in production)
DEBUG=false
DEVELOPMENT=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Network Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/miner-detector.crt
SSL_KEY_PATH=/etc/ssl/private/miner-detector.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30